<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddDoctorServlet</servlet-name>
        <servlet-class>Controller.AddDoctorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDoctorServlet</servlet-name>
        <servlet-class>Controller.UpdateDoctorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveDoctorServlet</servlet-name>
        <servlet-class>Controller.RemoveDoctorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddSessionServlet</servlet-name>
        <servlet-class>Controller.AddSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDoctorServlet</servlet-name>
        <url-pattern>/AddDoctorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDoctorServlet</servlet-name>
        <url-pattern>/UpdateDoctorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveDoctorServlet</servlet-name>
        <url-pattern>/RemoveDoctorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSessionServlet</servlet-name>
        <url-pattern>/AddSessionServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
